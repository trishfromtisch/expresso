		<div class="row">
			<header>
				<div class="col-md-6 col-md-offset-3" id="welcome">					
					<br>
					<h1>welcome to expresso.</h1>
					<h3>brew reviews from coffee snobs like you</h3>
					<br>
					<br>
				</div>
			</header>
			<main>
				<div id="welcome-box" class="col-md-6 col-md-offset-3">
					<div class="row">
						<div id="sign-up_or_login" style="display:block">
							<h3>please  <button class="btn btn-default" id="sign_up">sign up.</button> or <button class="btn btn-default" id="login">login.</button>.</h3>
						</div>

						<div id="loginFormDiv" style="display:none">
							<% if @error %>
								<p style='color: red;'>Incorrect username/password</p>
							<% end %>
							<form id="loginForm" action="/session" method="POST" class="form-horizontal" role="form">
							  <div class="form-group">
							    <label for="sessionUser" class="col-md-2 control-label">username</label>
							    <div class="col-md-4">
							      <input type="text" class="form-control" id="sessionUser" name="name" placeholder="username">
							    </div>
							  </div>
							  <div class="form-group">
							    <label for="sessionPassword" class="col-md-2 control-label">password</label>
							    <div class="col-md-4">
							      <input type="password" class="form-control" id="sessionPassword" name="password" placeholder="password">
							    </div>
							  </div>
							  <input name="authenticity_token" value="<%= form_authenticity_token() %>" type="hidden">
							  <div class="form-group">
							    <div class="col-sm-offset-2 col-sm-10">
							      <button type="submit" id="createSession" class="btn btn-default">Sign in</button>
							    </div>
							  </div>
							</form>
						</div>

						<div id="newUserForm" class="col-sm-offset-2" style="display:none">
							<%= render 'form' %>
						</div>

					</div>
				</div>


			</main>
		</div>
		<script type="text/javascript">
			$("#sign_up").click(function(){
				$("#sign-up_or_login").toggle("slow")
				$("#newUserForm").toggle("slow")
			})

			$("#login").click(function(){
				$("#sign-up_or_login").toggle("slow")
				$("#loginFormDiv").toggle("slow")
			})
			$("#createSession").click(function(){
				$("loginForm").reset()
			})
		</script>